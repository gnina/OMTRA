# Environment Configuration
# Copy to .env and fill in your values

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here-change-in-production

# Worker Configuration
WORKER_TIMEOUT=180
WORKER_CONCURRENCY=1
CUDA_VISIBLE_DEVICES=0

# File Upload Limits
MAX_FILE_SIZE=26214400  # 25MB in bytes
MAX_FILES_PER_JOB=3
ALLOWED_EXTENSIONS=.sdf,.cif,.mol2,.pdb

# Job Management
JOB_TTL_HOURS=48
CLEANUP_INTERVAL_MINUTES=60

# Model Configuration
MODEL_CHECKPOINT_PATH=/srv/app/models/checkpoint.pth
MODEL_CONFIG_PATH=/srv/app/models/config.yaml

# Storage (optional - for cloud deployment)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1

# Security (optional)
# CLAMAV_ENABLED=false
# RATE_LIMIT_PER_MINUTE=10

# Monitoring
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true
